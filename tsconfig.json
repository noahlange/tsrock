{
  "compilerOptions": {
    "moduleResolution": "node",
    "declarationDir": "dist/types",
    "target": "esnext",
    "module": "esnext",
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "declaration": true,
    "strict": true
  },
  "exclude": ["dist"]
}
