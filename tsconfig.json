{
  "compilerOptions": {
    "moduleResolution": "node",
    "declarationDir": "dist/types",
    "target": "esnext",
    "module": "esnext",
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "declaration": true,
    "strict": true
  },
  "exclude": ["dist"],
  "include": [
    "src/**/*",
    "node_modules/minecraft-scripting-types-client",
    "node_modules/minecraft-scripting-types-server",
    "node_modules/minecraft-scripting-types-shared"
  ]
}
